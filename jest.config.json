{
  "coverageProvider": "v8",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/"
  ],
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "preset": "ts-jest/presets/default-esm",
  "roots": [
    "<rootDir>/src"
  ],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "verbose": true
}
